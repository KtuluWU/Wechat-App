/* pages/eurom/index.wxss */
.container {
  padding-top: 15% !important;
}
.numbers-block {
  width: 80%;
  margin-top: 250rpx;
  text-align: center;
}

.numbers1-block {
  display: flex;
  justify-content: space-between;
}

.numbers2-block {
  margin-top: 20px;
  display: flex;
  justify-content: center;
}

.number1 {
  font-weight: 20px;
  font-size: 20px;
  padding: 10px;
  width: 26px;
  height: 26px;
  color: white;
  /*background-color: #243f85;*/
  background: radial-gradient(circle at 50% 120%, #81e8f6, #81e8f6 10%, #243f85 80%, #243f85 100%);
  border-radius: 50%;
  position: relative;
}

.number1::before {
  content: "";
  position: absolute;
  top: 1%;
  left: 5%;
  width: 90%;
  height: 90%;
  border-radius: 50%;
  background: radial-gradient(circle at 50% 0px, #ffffff, rgba(255, 255, 255, 0) 58%);
  -webkit-filter: blur(5px);
  z-index: 2;
}

.number2 {
  font-weight: 20px;
  font-size: 20px;
  margin-left: 5px;
  margin-right: 5px;
  padding: 10px;
  width: 26px;
  height: 26px;
  color: white;
  /*background-color: #fcb749;*/
  background: radial-gradient(circle at 50% 120%, #FCFC49, #FCFC49 10%, #fcb749 80%, #fcb749 100%);
  border-radius: 50%;
  position: relative;
}

.number2::before {
  content: "";
  position: absolute;
  top: 1%;
  left: 5%;
  width: 90%;
  height: 90%;
  border-radius: 50%;
  background: radial-gradient(circle at 50% 0px, #ffffff, rgba(255, 255, 255, 0) 58%);
  -webkit-filter: blur(5px);
  z-index: 2;
}

.button-block {
  margin-top: 150rpx;
}